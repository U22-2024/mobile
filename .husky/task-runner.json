{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "install-buf-cli",
      "command": "dotnet",
      "args": [
        "fsi",
        "./scripts/init.fsx"
      ],
      "group": "init"
    },
    {
      "name": "delete-generated-files",
      "command": "",
      "args": [
        "fsi",
        "./scripts/clean.fsx"
      ],
      "group": "clean"
    },
    {
      "name": "generate-grpc",
      "command": "./Tools/bin/buf",
      "windows": {
        "command": "Tools\\bin\\buf.exe"
      },
      "args": [
        "generate",
        "--include-imports",
        "--include-wkt"
      ],
      "group": "generate"
    }
  ]
}